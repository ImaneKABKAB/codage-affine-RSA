<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#673AB7"
    android:backgroundTint="#FFEB3B"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button1"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="138dp"
        android:backgroundTint="#635977"
        android:drawableBottom="@drawable/ic_baseline_stairs_24"
        android:text="@string/code_affine" />

    <Button
        android:id="@+id/button2"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="238dp"
        android:background="@color/teal_200"
        android:backgroundTint="#8A756E"
        android:drawableBottom="@drawable/ic_baseline_stairs_24"
        android:text="@string/code_rsa"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="122dp"
        android:autofillHints=""
        android:backgroundTint="#8C846B"
        android:drawableStart="@drawable/ic_baseline_text"
        android:hint="@string/write_your_text_here"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#33691E" />


</RelativeLayout>